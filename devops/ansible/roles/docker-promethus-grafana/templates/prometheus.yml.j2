global:
  scrape_interval: 10s
  evaluation_interval: 10s
scrape_configs:
  - job_name: 'devops-server'
    metrics_path: /metrics
    static_configs:
      - targets: ['{{ ansible_host }}:{{ prometheus.ports }}']

  - job_name: 'master'
    metrics_path: /metrics
    static_configs:
      - targets: ['{{ master.host }}']

  - job_name: 'worker1'
    metrics_path: /metrics
    static_configs:
      - targets: ['{{ worker1.host }}']

  - job_name: 'worker2'
    metrics_path: /metrics
    static_configs:
      - targets: ['{{ worker2.host }}']
