version: '3.1'

services:

  redmine:
    container_name: redmine
    image: redmine
    restart: always
    ports:
      - {{ redmine.port }}:3000
    environment:
      REDMINE_DB_MYSQL: db
      REDMINE_DB_PASSWORD: redmine
      REDMINE_DB_DATABASE: redmine
      REDMINE_DB_ENCODING: utf8
      #REDMINE_NO_DB_MIGRATE: true
    volumes:
      - /home/{{ ansible_user }}/{{ redmine.volumes }}/usr/src/redmine/files:/usr/src/redmine/files
      - /home/{{ ansible_user }}/{{ redmine.volumes }}/usr/src/redmine/plugins:/usr/src/redmine/plugins
      - /home/{{ ansible_user }}/{{ redmine.volumes }}/usr/src/redmine/public/themes:/usr/src/redmine/public/themes

  db:
    container_name: redmine-mariadb
    image: mariadb
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: redmine
      MYSQL_DATABASE: redmine
    ports:
      - {{ redmine.db.port }}:3306
    volumes:
      - /home/{{ ansible_user }}/{{ redmine.volumes }}/mysql/var/lib/mysql:/var/lib/mysql
    command:
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci